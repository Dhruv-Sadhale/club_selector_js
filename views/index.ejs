    <!-- Scroll Animation JavaScript -->
    <script>
        window.addEventListener('scroll', () => {
            const colorfulHeading = document.querySelector('.club-card');
            const scrollPosition = window.scrollY;

            colorfulHeading.style.backgroundPositionY = `${scrollPosition}px`;
        });
        
        document.addEventListener('DOMContentLoaded', () => {
        const clubTemplates = document.querySelectorAll('.club-card');

        function checkVisibility() {
            clubTemplates.forEach((template) => {
                const position = template.getBoundingClientRect().top;

                if (position < window.innerHeight * 0.8 && position > -template.clientHeight) {
                    template.classList.add('show');
                } else {
                    template.classList.remove('show');
                }
            });
        }

        window.addEventListener('scroll', checkVisibility);
        window.addEventListener('resize', checkVisibility);
        checkVisibility(); // Initial check on page load
    });
    </script>

